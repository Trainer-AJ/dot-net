@page
@model tax1.Pages.TaxCalculatorModel
@{
    ViewData["Title"] = "Tax Calculator";
}

<h2>Tax Calculator</h2>

<form method="post">
    <div class="form-group">
        <label for="income">Enter your Income:</label>
        <input type="number" class="form-control" id="income" name="income" required />
    </div>

    <div class="form-group">
        <label for="taxRegime">Choose your Tax Regime:</label>
        <select class="form-control" id="taxRegime" name="taxRegime" required>
            <option value="Old">Old Regime</option>
            <option value="New">New Regime</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Calculate Tax</button>
    <a href="/results" class="btn btn-secondary">View Results</a>
</form>

@if (Model.TaxAmount.HasValue)
{
    <div class="alert alert-info mt-3">
        <strong>Your Tax Liability is: â‚¹@Model.TaxAmount</strong>
    </div>
}

@* Displaying the tax records if available *@       
@if (Model.TaxRecords != null && Model.TaxRecords.Count > 0)
{
    <h3 class="mt-4">Previous Tax Calculations</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Income</th>
                <th>Tax Amount</th>
                <th>Date Calculated</th>
                <th>Tax Regime</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.TaxRecords)
            {
                <tr>
                    <td>@record.Id</td>
                    <td>@record.UserInput</td>
                    <td>@record.TaxAmount</td>
                    <td>@record.DateCalculated.ToString("yyyy-MM-dd")</td>
                    <td>@record.TaxRegime</td>
                </tr>
            }
        </tbody>
    </table>
}
